  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joaquimserafim/simple-once/issues"
  },
  "homepage": "https://github.com/joaquimserafim/simple-once",
  "devDependencies": {
    "istanbul": "^0.3.13",
    "jscs": "^1.12.0",
    "jshint": "^2.7.0",
    "pre-commit": "^1.0.6",
    "tape": "^4.0.0"
